<script>

    function w3_open() {
        document.getElementsByClassName("w3-sidenav")[0].style.display = "block";
        document.getElementsByClassName("w3-sidenav")[0].style.opacity = "1.0";
        return false;
    }

    function w3_close() {
        var style = document.getElementsByClassName("w3-sidenav")[0].style.display;
        if (style == 'block') {
            document.getElementsByClassName("w3-sidenav")[0].style.display = "none";
        }
    }

    function show(el) {
        $(el).next().toggle();
    }

    // smooth animation scroll
    function scrollSmoothly(e) {
        e = e || window.e;
        var target = e.target || e.srcElement;
        var elem = $(target).closest('A');
        var id;

        if ( elem && $(target).closest('A').attr('data-id') ) {
            id = $(elem).attr('data-id');
            $('html, body').animate({scrollTop:$('#' + id).offset().top}, 500, function () {
            });
        }

    }

    document.getElementById("center-container").addEventListener('mouseenter', w3_close, false);
    document.body.addEventListener('click', scrollSmoothly, false);



</script>


